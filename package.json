{
  "name": "@theshoebruh/react-native-wunderwheel",
  "version": "0.2.12",
  "description": "A library for react native that allows you to create a wheel of fortune with customizable segments.",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.json",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-awesome-library-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lintfix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theshoebruh/react-native-wunderwheel.git.git"
  },
  "author": "Jarod Schoeman <theshoebruh@gmail.com> (https://github.com/theshoebruh)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theshoebruh/react-native-wunderwheel.git/issues"
  },
  "homepage": "https://github.com/theshoebruh/react-native-wunderwheel.git#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@commitlint/config-conventional": "^17.0.2",
    "@eslint/js": "^9.16.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/d3-shape": "^3.1.6",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "babel-jest": "^29.7.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.76.2",
    "react-native-builder-bob": "^0.32.1",
    "react-native-gesture-handler": "^2.21.2",
    "react-native-svg": "^15.9.0",
    "react-test-renderer": "^18.3.1",
    "release-it": "^17.10.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.16.0"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-svg": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.44.1"
  },
  "dependencies": {
    "d3-shape": "^3.2.0"
  },
  "directories": {
    "example": "example",
    "lib": "lib"
  },
  "types": "./lib/typescript/commonjs/src/index.d.ts"
}
